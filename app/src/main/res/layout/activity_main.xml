<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/welcome"
    android:background="@drawable/bg_splash">

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/young_blue"
        android:text="lewati"
        android:fontFamily="@font/poppins_regular"/>

    <TextView
        android:id="@+id/ayoDiskusi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_bold"
        android:text="AYO DISKUSI"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/kataSambutan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ayoDiskusi"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Lorem Ipsum is simply dummy text of the."
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/gambarDiskusi"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/diskusi"
        android:layout_below="@id/kataSambutan"
        android:layout_margin="50dp"/>

    <Button
        android:id="@+id/btnMulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gambarDiskusi"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/white"
        android:text="MULAI SEKARANG"
        android:textAllCaps="false"
        android:textColor="@color/young_blue"
        android:textSize="16sp"
        android:textStyle="bold"/>


</RelativeLayout>